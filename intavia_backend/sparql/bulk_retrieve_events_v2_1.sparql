SELECT ?event ?role ?entity ?event_label ?role_label ?begin ?end ?time_span_label ?role_type ?event_type ?count

{% include 'add_datasets_v2_1.sparql' %}

WITH {
SELECT DISTINCT ?event 

{% for dataset in datasets -%}
FROM <{{dataset.value}}>
{% endfor %}

WHERE {
