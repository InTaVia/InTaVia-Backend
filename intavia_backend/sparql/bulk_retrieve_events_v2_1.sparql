} ORDER BY ?event
LIMIT {{limit}}
{% if _offset > 0 %}OFFSET {{_offset}}{% endif %}
} AS %query_set

WITH {
    SELECT (COUNT(DISTINCT ?event) AS ?count)

    {% include 'add_datasets_v2_1.sparql' %}

    WHERE {
        {% include 'bulk_query_events_v2_1.sparql' %}
    }
} AS %count_set

WHERE {  
INCLUDE %query_set
INCLUDE %count_set
